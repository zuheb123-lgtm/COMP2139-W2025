@model Project 
@{
    ViewData["Title"] = "Project Details";  // Sets the title of the view to "Project Details"
}

@* Completely update for Lab 9 *@

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card mb-3">
        <div class="card-body">
            <h3 class="card-title">@Html.DisplayFor(model => model.Name, "ProjectName")</h3>
            <p class="card-text">@Html.DisplayFor(model => model.Description,  "ProjectDescription")</p>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Project ID:</strong> @Model.ProjectId</li>
                <li class="list-group-item"><strong>Start Date:</strong> @Html.DisplayFor(model => model.StartDate, "DateTime")</li>
                <li class="list-group-item"><strong>End Date:</strong> @Html.DisplayFor(model => model.EndDate, "DateTime")</li>
                <li class="list-group-item"><strong>Status:</strong>@Html.DisplayFor(model => model.Status, "ProjectName")</li>
            </ul>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" asp-controller="Project" class="btn btn-secondary">Back to Projects</a>
            </div>
        </div>
    </div>

    <div id="projectComments">
        <h3>Comments</h3>
        <div id="commentsList" class="comments-container">
            <!-- Comments will be loaded here using AJAX -->
        </div>
        <form id="addCommentForm" class="mt-3">
            <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Add a comment..."></textarea>
            </div>
            <button type="submit" class="btn btn-success">Post Comment</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/projectComments.js"></script>
    <script>
        $(document).ready(function () {
            var projectId = $('#projectComments input[name="ProjectId"]').val();
            loadComments(projectId);
        });
    </script>
}
